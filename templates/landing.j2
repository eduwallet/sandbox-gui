<html>
<head>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>

<body>
<h2><img src="{{ url_for('static', filename='wallet.ico') }}" width=32> eduWallet Sandbox</h2>
<form action='/test' name='theForm' method=POST>
<input type=hidden name=test_id>
<div class=type>
    <p>Type:</p>
    <p><input type=checkbox name=ld_jwt value=On> LD_JWT</p>
    <p><input type=checkbox name=vc_jwt value=On> VC_JWT</p>
    <p><input type=checkbox name=sd_jwt value=On> SD_JWT</p>
</div>
<br>

{% for id, test in tests.items() %}
    <a href="#" onclick="return clickTest('{{id}}');"><div class=test>
        <h3>{{ test.name }}</h3>
        <p>{{ test.description }}</p>
        <p>credential type: {{ test.credential.type }}</p>
        <p>type: {{ test.type }}</p>
        <p>spec: {{ test.spec_version }}</p>
    </div></a>
{% endfor %}
</form>

<script type="text/javascript">
function clickTest(test_id) {
    // alert(test_id);
    document.theForm.test_id.value = test_id;
    document.theForm.submit();
    return false;
}
</script>
</body>
</html>
